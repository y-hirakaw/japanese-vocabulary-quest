{
  "platform": "iOS",
  "framework": "SwiftUI",
  "architecture": "SVVS (Store-View-ViewState-Service)",
  "dataLayer": "SwiftData",
  "views": [
    "ContentView",
    "HomeView", 
    "SceneSelectionView",
    "LearningView",
    "DictionaryView",
    "ProgressTrackingView",
    "UserCreationView"
  ],
  "components": [
    "VocabularyCard",
    "SceneCard", 
    "RubyText",
    "ActionCard"
  ],
  "models": [
    "User",
    "Vocabulary",
    "LearningScene",
    "LearningProgress", 
    "Character",
    "Achievement"
  ],
  "viewStates": [
    "HomeViewState",
    "LearningViewState",
    "SceneSelectionViewState"
  ],
  "stores": [
    "UserStore",
    "VocabularyStore",
    "SceneStore"
  ],
  "repositories": [
    "UserRepository",
    "VocabularyRepository",
    "SceneRepository"
  ],
  "apis": [],
  "navigation": {
    "root": "TabView",
    "tabs": [
      "Home",
      "SceneSelection", 
      "Dictionary",
      "ProgressTracking"
    ]
  },
  "dataStorage": "SwiftData with CloudKit",
  "targetAudience": "Elementary school students (ages 6-9)",
  "features": [
    "Japanese vocabulary learning",
    "Gamified learning progression",
    "Scene-based vocabulary context",
    "Ruby text (furigana) support",
    "User progress tracking"
  ]
}